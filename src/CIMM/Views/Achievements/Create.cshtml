@model CIMM.ViewModels.CreateAchievementViewModel

<h2>New Achievement</h2>

<form asp-controller="Achievements" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="Achievement.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Achievement.Name" class="form-control" />
                <span asp-validation-for="Achievement.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Achievement.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Achievement.Description" class="form-control" />
                <span asp-validation-for="Achievement.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Achievement.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Achievement.Description" class="form-control" />
                <span asp-validation-for="Achievement.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Achievement.Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Achievement.Type" class="form-control" asp-items="@Model.AchievementTypes">
                    <option>Select</option>
                </select>
                <span asp-validation-for="Achievement.Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Achievement.Score" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Achievement.Score" class="form-control" />
                <span asp-validation-for="Achievement.Score" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
