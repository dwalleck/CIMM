@model CIMM.ViewModels.AwardAchievementsViewModel

<h2>Set Achievements for Something</h2>

<form asp-controller="Projects" asp-action="AwardAchievements" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div asp-validation-summary="All" class="text-danger"></div>

    @for (int i = 0; i < @Model.AchievementStatuses.Count(); i++)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="@Model.AchievementStatuses[i].AchievementName" hidden="hidden" />
                    <input asp-for="@Model.AchievementStatuses[i].AchievementId" hidden="hidden" />
                    <input asp-for="@Model.AchievementStatuses[i].HasAchievement" />
                    <label asp-for="@Model.AchievementStatuses[i].HasAchievement">@Model.AchievementStatuses[i].AchievementName</label>
                </div>
            </div>
        </div>

    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
