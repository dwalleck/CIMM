@model IEnumerable<CIMM.Models.Project>

<h2>Projects</h2>

<p>
    <a asp-controller="Projects" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Code</th>
        <th>CI</th>
        <th></th>
    </tr>
    @foreach (var project in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => project.CodeUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => project.CIUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@project.ProjectId">Edit</a> |
                <a asp-action="AwardAchievements" asp-route-id="@project.ProjectId">Achievements</a> |
                <a asp-action="Delete" asp-route-id="@project.ProjectId">Delete</a>
            </td>

        </tr>
    }
</table>
